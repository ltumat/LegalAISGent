{
  "name": "legalaisgent",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "frontend",
    "backend/drizzle"
  ],
  "scripts": {
    "dev": "concurrently -n db,backend,frontend -c yellow,magenta,cyan \"bun --cwd backend/drizzle run db:start\" \"cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\" \"bun --cwd frontend dev\"",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "bun --cwd frontend dev",
    "build:frontend": "bun --cwd frontend run build",
    "db:push": "bun --cwd backend/drizzle run db:push",
    "db:studio": "bun --cwd backend/drizzle run db:studio",
    "db:generate": "bun --cwd backend/drizzle run db:generate",
    "db:migrate": "bun --cwd backend/drizzle run db:migrate",
    "db:start": "bun --cwd backend/drizzle run db:start",
    "db:watch": "bun --cwd backend/drizzle run db:watch",
    "db:stop": "bun --cwd backend/drizzle run db:stop",
    "db:down": "bun --cwd backend/drizzle run db:down"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
